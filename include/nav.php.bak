<?php
// Get all the user's feeds
$query = "SELECT * FROM feeds WHERE id=" . $_SESSION['id'];
$rows = Query($db, $query);

// Create an array of links and titles
$titles = array();
foreach ($rows as $row) {
        $rss = simplexml_load_file($row['link']);
        if (strlen($rss->channel->title) == 0) {
                array_push($titles,
                           array("link" => $row['link'],
                                 "title" => $row['link']));
        } else {
                array_push($titles,
                           array("link" => $row['link'],
                                 "title" => $rss->channel->title));
        }
}
?>

